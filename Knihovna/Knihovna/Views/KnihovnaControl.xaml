<UserControl x:Class = "Knihovna.Views.KnihovnaControl" 
   xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
   xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml" 
   xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006" 
   xmlns:d = "http://schemas.microsoft.com/expression/blend/2008" 
   xmlns:local = "clr-namespace:Knihovna.Views" 
   mc:Ignorable = "d" 
   d:DesignHeight = "300" d:DesignWidth = "300">


    <Grid>
        <StackPanel Orientation="Horizontal">
            
                <ListView Margin="10" ItemsSource="{Binding Path=Knihovny}" HorizontalAlignment="Left" HorizontalContentAlignment="Left">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Oddělení" Width="320" DisplayMemberBinding="{Binding Path= Nazev}" />
                        </GridView>
                    </ListView.View>
                </ListView>

            <StackPanel Orientation="Vertical">
                <Button Content="Přidat" Height="30" HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top" Width="100"/>
                <Button Content="Změnit" Height="30" HorizontalAlignment="Left" Margin="15,15,0,0" VerticalAlignment="Top" Width="100"/>
                <Button Content="Odebrat" Height="30" HorizontalAlignment="Left" Margin="15,15,0,0" VerticalAlignment="Top" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>

</UserControl>